<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!-- 标题区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <!-- 标题背景层 -->
        <ImageView
            android:id="@+id/widget_header_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/round_top" />

        <LinearLayout
            android:id="@+id/widget_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical">
            
            <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:src="@drawable/app_notes"
                 android:layout_marginEnd="8dp"
                 android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
    </FrameLayout>

    <!-- 分割线：使用 ImageView 代替 View，背景色设为带透明度的白色 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3FFFFFF" />

    <!-- 内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 内容背景层 -->
        <ImageView
             android:id="@+id/widget_content_bg"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="fitXY"
             android:src="@drawable/round_bottom"/>

        <TextView
            android:id="@+id/widget_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#424242"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingMultiplier="1.2" />
            
    </FrameLayout>

</LinearLayout>